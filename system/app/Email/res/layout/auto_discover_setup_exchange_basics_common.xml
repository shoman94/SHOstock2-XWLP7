<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <View android:layout_width="fill_parent" android:layout_height="10.0dip" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/auto_discover_setup_exchange_email_address_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_email_address" android:maxLength="320" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/auto_discover_setup_exchange_domain_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_domain" android:maxLength="320" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/auto_discover_setup_exchange_user_name_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_user_name" android:maxLength="320" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/auto_discover_setup_exchange_password_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_password" android:maxLength="320" android:inputType="textPassword" android:imeOptions="actionDone" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <View android:background="@drawable/email_contents_line" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/account_ssl_table" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/account_trust_certificates_string" android:text="@string/auto_discover_setup_exchange_trust_certificates_label" style="@style/accountSetup2LineTextStyle" />
            <CheckBox android:id="@id/account_trust_certificates" android:checked="false" style="@style/accountSetupButtonCheckBoxStyle" />
        </LinearLayout>
        <View android:background="@drawable/email_contents_line" android:layout_width="fill_parent" android:layout_height="1.0dip" />
    </LinearLayout>
</ScrollView>
