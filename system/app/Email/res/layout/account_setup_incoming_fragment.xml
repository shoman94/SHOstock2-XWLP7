<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <View android:layout_width="fill_parent" android:layout_height="10.0dip" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/account_setup_incoming_username_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_username" android:maxLength="320" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/account_setup_incoming_password_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_password" android:maxLength="320" android:inputType="textPassword" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/account_server_label" android:text="@string/account_setup_incoming_pop_server_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_server" android:maxLength="320" android:inputType="textUri" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/account_setup_incoming_security_label" style="@style/accountSetupEditFieldTextStyle" />
            <Spinner android:id="@id/account_security_type" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/account_setup_incoming_port_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/account_port" android:maxLength="5" android:inputType="number" android:imeOptions="actionNext" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/account_delete_policy_label" android:text="@string/account_setup_incoming_delete_policy_label" style="@style/accountSetupEditFieldTextStyle" />
            <Spinner android:id="@id/account_delete_policy" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/imap_path_prefix_section" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/account_setup_incoming_imap_path_prefix_label" style="@style/accountSetupEditFieldTextStyle" />
            <EditText android:id="@id/imap_path_prefix" android:hint="@string/account_setup_incoming_imap_path_prefix_hint" android:maxLength="320" android:inputType="text" android:imeOptions="actionDone" style="@style/accountSetupEditFieldValueStyle" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
